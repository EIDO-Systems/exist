<!DOCTYPE ivy-module [
    <!ENTITY geotools.version "2.4.5">
]>
<!--
    Ivy module to retrieve jars for Lucene 
-->
<ivy-module version="2.0">
    <info organisation="org.exist" module="indexes.spatial"/>

    <configurations>
        <conf name="core" visibility="private"/>
        <conf name="compile" visibility="private" transitive="false" extends="core"/>
        <conf name="runtime" visibility="public"  transitive="true" extends="compile"/>
    </configurations>

    <publications>
        <artifact name="exist-index-spatial" type="jar" conf="runtime" ext="jar"/>
    </publications>

    <dependencies defaultconf="compile->default">
        <dependency org="org.opengis" name="geoapi-nogenerics" rev="2.1.1"/>
        <dependency org="org.geotools" name="gt2-api" rev="&geotools.version;"/>
        <dependency org="org.geotools" name="gt2-main" rev="&geotools.version;"/>
        <dependency org="org.geotools" name="gt2-referencing" rev="&geotools.version;"/>
        <dependency org="com.vividsolutions" name="jts" rev="1.8"/>
        <dependency org="org.hsqldb" name="hsqldb" rev="2.4.1"/>
        <dependency org="org.geotools" name="gt2-epsg-wkt" rev="&geotools.version;" conf="runtime->default"/>
        <dependency org="java3d" name="vecmath" rev="1.3.1" conf="runtime->default"/>
        <dependency org="javax.media" name="jai_core" rev="1.1.3" conf="runtime->default"/>

<!--        <dependency org="org.geotools" name="gt2-epsg-extension" rev="&geotools.version;" conf="runtime->default"/>-->
<!--        <dependency org="org.geotools" name="gt2-metadata" rev="&geotools.version;" conf="runtime->default"/>-->
<!--        <dependency org="org.geotools" name="gt2-xml" rev="&geotools.version;" conf="runtime->default"/>-->

        <exclude module="commons-logging"/>

    </dependencies>
</ivy-module>
