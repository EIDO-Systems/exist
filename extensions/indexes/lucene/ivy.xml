<?xml version="1.0"?>
<!DOCTYPE ivy-module [
    <!ENTITY lucene.version "4.10.4">
]>
<!--
    Ivy module to retrieve jars for Lucene 
-->
<ivy-module version="2.0">
    <info organisation="org.exist" module="indexes.lucene"/>

    <configurations>
        <conf name="core" visibility="private"/>
        <conf name="compile" visibility="private" transitive="false" extends="core"/>
        <conf name="runtime" visibility="public"  transitive="true" extends="compile"/>
    </configurations>

    <publications>
        <artifact name="exist-index-lucene" type="jar" conf="runtime" ext="jar"/>
    </publications>

    <dependencies defaultconf="compile->default">
        <dependency org="org.apache.lucene" name="lucene-core" rev="&lucene.version;"/>
        <dependency org="org.apache.lucene" name="lucene-analyzers-common" rev="&lucene.version;"/>
        <dependency org="org.apache.lucene" name="lucene-analyzers-icu" rev="&lucene.version;">
            <exclude module="icu4j"/>
        </dependency>
        <dependency org="org.apache.lucene" name="lucene-queries" rev="&lucene.version;" conf="runtime->default"/>
	    <dependency org="org.apache.lucene" name="lucene-queryparser" rev="&lucene.version;"/>
    </dependencies>
</ivy-module>
